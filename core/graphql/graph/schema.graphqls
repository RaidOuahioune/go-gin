# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Todo {
  ID: ID!
  Text: String!
  Done: Boolean!
  User: User!
}

type User {
  ID: ID!
  Name: String!
  Email: String!
  Age: Int!
  Todos: [Todo!]
}

type Query {
  todos: [Todo!]
  users: [User!]
  user(id: ID!): User
}

input NewTodo {
  text: String!
  userId: String!
}

type Mutation {
  createTodo(input: NewTodo!): Todo!
}
